{
  "name": "git-insp",
  "devDependencies": {
    "@trunkio/launcher": "^1.3.4",
    "semantic-release": "^24.2.3",
    "semantic-release-preconfigured-conventional-commits": "latest"
  },
  "scripts": {
    "trunk": "trunk",
    "lint": "trunk check",
    "fmt": "trunk fmt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomwalk12/PPS-22-git-insp.git"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "develop",
        "prerelease": true
      }
    ],
    "preset": "conventionalcommits",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "target/scala-*/ulisse.jar",
              "label": "Executable JAR"
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": ["CHANGELOG.md", "package.json"],
          "message": "chore(release): ðŸ“¦ v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
